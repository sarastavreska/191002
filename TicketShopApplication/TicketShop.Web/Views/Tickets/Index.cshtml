@model List<TicketShop.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
   <div class="m-3">
       <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add Ticket</a>
   </div>     
   
   @for (int i = 0; i < Model.Count; i++)
        {
           
            var item = Model[i];
            //posle 3 produkti dodavame nova redica
            if(i % 3 == 0)
            {
                @: <div class="row">
                
            }
            <div class="col-md-3 m-4">
            <div class="card" style="width: 20rem; height: 30rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text">@item.MovieGenre</p>
                    <p class="card-text">@item.VallidTill</p>

                    <h6>Price: @item.TicketPrice</h6>
                </div>
                <div class="card-footer">
                    <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id"class="btn btn-info">Add to Cart</a>
                    <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id"class="btn btn-secondary">Edit Ticket</a>
                </div>
            
            </div>
            </div>
             if(i % 3 == 2)
            {
                 @: </div>
                
            }
        }
        </div>
       