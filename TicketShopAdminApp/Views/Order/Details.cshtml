@model TicketShopAdminApp.Models.Order


<div class="container">
   <div class="m-3">
       <a class="btn btn-success" >Order for:  @Model.User.UserName</a>
   </div>     
   
   @for (int i = 0; i < Model.Tickets.Count; i++)
        {
           
            var item = Model.Tickets.ElementAt(i).Ticket;
            //posle 3 produkti dodavame nova redica
            if(i % 3 == 0)
            {
                @: <div class="row">
                
            }
            <div class="col-md-3 m-4">
            <div class="card" style="width: 20rem; height: 30rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text">@item.MovieGenre</p>
                    <p class="card-text">@item.VallidTill</p>

                    <h6>Price: @item.TicketPrice</h6>
                </div>               
            </div>
            </div>
             if(i % 3 == 2)
            {
                 @: </div>
                
            }
        }
        </div>
       