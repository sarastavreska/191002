@model List<TicketShopAdminApp.Models.Order>
@{
}
<div>Index view for order controller index action</div>
<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Details</th>
                    <th scope="col">Number of Tickets</th> 
                    
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active tickets</td>
                    </tr>
                }
                else
                {
                     @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.Tickets.Count</td>
                           
                            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-orderId="@item.Id" class="btn btn-success">Create invoice</a></td>

                        </tr>
                    }
                }
            </tbody>
            
        </table>
    </div>

</div>